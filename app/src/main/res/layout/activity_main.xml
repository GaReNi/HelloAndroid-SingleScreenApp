<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFF"
    android:orientation="vertical"
    tools:context="com.example.gareni.helloandroid.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#29B6F6"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="Learn tomorrow's skills, today."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.6"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="#84FFFF"
        android:text="Be on Demand" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/udacitylogo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:textSize="34sp"
        android:layout_weight="0.7"
        android:background="#81D4FA"
        android:textColor="#607D8B"
        android:text="Udacity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:textSize="24sp"
        android:layout_weight="0.5"
        android:background="#81D4FA"
        android:textColor="#607D8B"
        android:text="2465 Latham St" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:textSize="24sp"
        android:layout_weight="0.5"
        android:background="#81D4FA"
        android:textColor="#607D8B"
        android:text="Mountain View, CA 94043" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:textSize="24sp"
        android:layout_weight="0.5"
        android:background="#81D4FA"
        android:textColor="#607D8B"
        android:text="650-555-5555" />

</LinearLayout>
